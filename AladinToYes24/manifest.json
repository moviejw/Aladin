{
  "manifest_version": 3,
  "name": "Yes24 ISBN 자동 처리",
  "version": "0.3",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.yes24.com/*",
    "*://*.aladin.co.kr/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.yes24.com/Product/ProductList*",
        "*://*.yes24.com/Product/SelectProduct*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.aladin.co.kr/scm/worder_delivery.aspx*"
      ],
      "js": ["content/aladin.js"],
      "run_at": "document_idle"
    }
  ]
}
